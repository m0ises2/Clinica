<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login - Clinica</title>
    {% block styles %}

        <link href="{{ asset('bundles/eam/images/icon.png') }}" rel='icon' type='image/png'>

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('bundles/eam/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />

        <!-- MetisMenu CSS -->
        <link href="{{ asset('bundles/eam/css/metisMenu.min.css') }}" rel="stylesheet" type="text/css" />

        <!-- Custom CSS -->
        <link href="{{ asset('bundles/eam/css/sb-admin-2.css') }}" rel="stylesheet" type="text/css" />

        <!-- Custom Fonts -->
        <link href="{{ asset('bundles/eam/css/fontawesome/css/font-awesome.css') }}" rel="stylesheet" type="text/css" /> 
    {% endblock %}
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-green">
                    <div class="panel-heading" align="center">
                        <h3 class="panel-title"> Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action = "{{ path('login_check') }} ">
                            <fieldset>
                                {% for flashMessage in app.session.flashbag.get('Error') %}
                                    <div class = "alert alert-danger" align="center" > 
                                            {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                {# Este condicional me permite saber si existen o no errores#}
                                {% if error  %}
                                    <div class = "alert alert-danger" align="center" > 
                                        {{ error.messageKey|trans(error.messageData) }}
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                   <input class="form-control" required placeholder="Usuario" name="_username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" required placeholder="Contraseña" name="_password" type="password" value="">
                                </div>
                                <!-- Redireccionar al usuario en caso de que haya funcionado la verificación -->
                                <input type="hidden" name="{{ path('Home') }}" value="/account" />
                                <!-- Change this to a button or input when using this as a form -->
                                <div style="padding-top: 1cm;">
                                    <input type="submit" name="submit" value="Entrar" class="btn btn-lg btn-success btn-block"/>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="{{ asset('bundles/eam/js/jquery.min.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/eam/js/bootstrap.min.js') }}"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{ asset('bundles/eam/js/metisMenu.min.js') }}"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/eam/js/sb-admin-2.js') }}"></script>

</body>

</html>
