{% extends "::baseClinica.html.twig" %}

{% block title %}  Nuevo {% endblock %}

{% block content %}
	<div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"> Nuevo Empleado </h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class = "row">
    	<div class = "col-lg-3 col-lg-offset-4">
    		{% if error %}
    			<div class = "alert alert-danger alert-dismissable">
    				<button class="close" aria-hidden="true" data-dismiss="alert" type="button">Ã—</button>
    				<i class="fa fa-exclamation"></i> {{ error }}
    			</div>
    		{% endif %}
    		<form method="POST" action = "{{ path('Nuevo_empleado') }}" >
	    		<div class = "form-group" >
		    		{{ form_label(form.nombreUsuario) }}
		    		{{ form_widget(form.nombreUsuario, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.contrasenha) }}
		    		{{ form_widget(form.contrasenha, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.nombre) }}
		    		{{ form_widget(form.nombre, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.apellido) }}
		    		{{ form_widget(form.apellido, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.fechaNac) }}
		    		{{ form_widget(form.fechaNac, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.seguroSocial) }}
		    		{{ form_widget(form.seguroSocial, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.direccion) }}
		    		{{ form_widget(form.direccion, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.telefono) }}
		    		{{ form_widget(form.telefono, {'attr':{'class':'form-control'}}) }}

		    		{{ form_label(form.fechaInicio) }}
		    		{{ form_widget(form.fechaInicio, {'attr':{'class':'form-control'}}) }}

		    		<label> Roles de empleado </label>
		    			{{ form_widget(form.tipo) }}
			    	<div class = "checkbox" >

			    	</div>
		    	</div>

		    	<div>
		    		{{form_widget(form.Guardar ,{'attr':{'class':'btn btn-primary'}})}}
		    		{{form_widget(form.Guardar_otro ,{'attr':{'class':'btn btn-success'}})}}
		    		{{form_widget(form.Cancelar ,{'attr':{'class':'btn btn-danger'}})}}
		    	<div/>
		    	{{ form_rest(form) }}	    		
	    	</form>
    	</div>
    </div>
    <!-- /.row -->

{% endblock %}