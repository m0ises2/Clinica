{% extends "::baseClinica.html.twig" %}

{% block title %}  Mostrar {% endblock %}

{% block content %}	
	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-header"> Detalles </h2>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4" style="padding-left:140px;">
			<img src="{{ asset('bundles/eam/images/user.png') }}" alt="profile_picture" class="img-responsive" style="width:160px; height:180px">
		</div>

		<div class="col-lg-4">
			<div class = "panel panel-info">
				<div class = "panel-body">
					<div class = "table-responsive">
						<table class = "table">
							<tbody>
								<tr>
									<td> <b> Nombre:</b> </td>
									<td> {{ entidad.nombre }} </td>
								</tr>
								<tr>
									<td> <b> Apellido: </b> </td>
									<td> {{ entidad.apellido }} </td>
								</tr>
								<tr>
									<td> <b> Nombre de Usuario: </b> </td>
									<td> {{ entidad.nombreUsuario }} </td>
								</tr>
								<tr>
									<td> <b> Tipo de Empleado: </b> </td>
									<td> {{ entidad.tipo }} </td>
								</tr>
								<tr>
									<td> <b> Fecha de Nacimiento: </b> </td>
									<td> {{ entidad.fechaNac|date('d/m/y') }} </td>
								</tr>
								<tr>
									<td> <b> Número de Seguro Social: </b> </td>
									<td> {{ entidad.seguroSocial }} </td>
								</tr>
								<tr>
									<td> <b> Dirección: </b> </td>
									<td> {{ entidad.direccion }} </td>
								</tr>
								<tr>
									<td> <b> Fecha de Ingreso al Cargo: </b> </td>
									<td> {{ entidad.fechaInicio|date('d/m/y') }} </td>
								</tr>
								<tr>
									<td> <b> Teléfono: </b> </td>
									<td> {{ entidad.telefono }} </td>
								</tr>								
							</body>
						</table>
					</div>
				</div>
			</div>
			<div class = "row col-lg-offset-1">
				<form method = "POST" action ="{{ path('Elegir') }}">

					{{ form_widget(form.id, {'attr':{'type':'hidden', 'value':entidad.id }}) }}

					<div class = "col-lg-4">
						{{ form_widget(form.Regresar, {'attr':{'class':'btn btn-outline btn-primary'}}) }}
					</div>

					<div class = "col-lg-4">
						{{ form_widget(form.Editar, {'attr':{'class':'btn btn-outline btn-primary'}}) }}
					</div>

					<div class = "col-lg-4">
						{{ form_widget(form.Borrar, {'attr':{'class':'btn btn-outline btn-danger'}}) }}
					</div>

					{{ form_rest(form) }}
				</form>
			</div>
		</div>
	</div>
{% endblock %}