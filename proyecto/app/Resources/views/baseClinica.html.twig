</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('Home') }}"> Clinica Dr. Chapatín </a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li> <a href="{{ path('Ayuda') }}">Ayuda - Instrucciones</a> </li>
              <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                         <li>
                            <a href="{{ path('logout') }}"><i class="fa fa-sign-out fa-fw"></i> Cerrar Sesión - {{ nombre }}</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->                
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        {# Esta sección de empleados debe estar condicionada a que solo aparezca si es ROLE_ADMIN #}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="#">
                                    <i class="fa fa-users fa-fw"></i> Empleados <span class="fa arrow"></span>
                                </a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="{{ path('Nuevo_empleado') }}"><i class="fa fa-plus-square"></i> Añadir </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('Ver_empleados') }}"><i class="fa fa-list"></i> Mostrar </a>
                                    </li>
                                </ul>
                                <!-- /.nav-second-level -->
                            </li>
                        {% endif %}

                            <li>
                                <a href="#">
                                    <i class="fa fa-user-md fa-fw"></i> Paciente <span class="fa arrow"></span>
                                </a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="{{ path('NuevoPaciente') }}"><i class="fa fa-plus-square"></i> Añadir </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('Buscar_Pacientes') }}"><i class="fa fa-list-ul"></i> Buscar </a>
                                    </li>                                    
                                </ul>
                                <!-- /.nav-second-level -->
                            </li>

                        

                        {# La gestion de citas no necesita condicionarse ya que todo el personal puede gestionar citas #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-calendar fa-fw"></i> Citas <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="{{ path('Nueva_cita') }}"><i class="fa fa-plus-square"></i> Añadir </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('Mostrar_citas') }}"><i class="fa fa-list"></i> Mostrar </a>
                                    </li>
                                </ul>
                                <!-- /.nav-second-level -->
                            </li>
                        
                        {# La gestion de visitas no necesita condicionarse ya que todo el personal puede gestionar citas #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-hospital-o"></i></i> Visitas <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="{{ path('Nueva_Visita') }}"><i class="fa fa-plus-square"></i> Añadir </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('Mostrar_citas') }}"><i class="fa fa-list"></i> Mostrar </a>
                                    </li>
                                </ul>
                                <!-- /.nav-second-level -->
                            </li>
                        
                        <li>
                            <a href="#"> =)(/%$#" <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#">Second Level Item</a>
                                </li>
                                <li>
                                    <a href="#">Second Level Item</a>
                                </li>
                                <li>
                                    <a href="#">Third Level <span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="#"><i class="fa fa-shield"></i> Avanzado <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="{{ path('Bitacora') }}"> <i class="fa fa-book"></i> Bitácora </a>
                                </li>
                            </ul>
                        </li>
                        {% endif %}

                        <li>
                             <a href="{{ path('logout') }}"> <i class="fa fa-sign-out"></i> Cerrar Sesión  </a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
     </div>
    <!-- /#wrapper -->

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            {#Aqui dentro es donde se colocará el bloque correspondiente a cada acción.#}
            {% block content %}
                <div class="row" >
                    <div class="col-lg-8 col-lg-offset-1 principio">
                    
                        <h1>Bienvenido/a, {{ nombre }}.</h1>
                        <div class = "mensaje" > <h4> ¿Que le gustaría hacer hoy? </h4> </div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('Ver_empleados') }}"> <button class="btn btn-primary" type="button"> Gestionar Empleados </button> </a>
                        {% endif %}
                        <a href="{{ path('Mostrar_citas') }}"> <button class="btn btn-primary boton" type="button"> Ver citas </button> </a>
                        <a href="#"> <button class="btn btn-primary boton" type="button"> Ver pacientes </button> </a>
                        <a href="#"> <button class="btn btn-primary boton" type="button"> Ver Historias Clínicas </button> </a>
                        
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="row cant_reporte">
                        <div class="col-lg-2 ">
                            <h4><b>Cant. Empleados</b></h4>
                            <div class = "numeros">
                                    {{ cantidad_empleados }}
                            </div>
                        </div>
                        <div class="col-lg-2 ">
                            <h4><b>Cant. Médicos/as</b></h4>
                            <div class = "numeros">
                                        {{ cantidad_medicos }}
                                </div>
                        </div>
                        <div class="col-lg-2 ">
                            <h4><b>Cant. Enfermeras/os</b></h4>
                            <div class = "numeros">
                                        {{ cantidad_enfermeras }}
                            </div>
                        </div>
                        <div class="col-lg-2 ">
                            <h4><b>Cant. Administrativos</b></h4>
                            <div class = "numeros">
                                        {{ cantidad_administrativos }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

    <!-- Footer -->
     <footer>
        <div class = "row" style="padding-top:20px; padding-left:110px; background-color:#BDBDBD;">
            <div class = "col-lg-6 col-lg-offset-1">
                <p><b>Desarrollado por: EAMCompany</b> ---- Contact information: <a href="mailto:eamcompany@gmail.com">EAMCompany</a>.</p>
            </div>
        </div>
    </footer> 

